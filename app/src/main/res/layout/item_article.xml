<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_article"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@color/black"
        android:layout_marginStart="@dimen/_10sdp"
        app:civ_border_color="@color/black"
        app:civ_border_width="@dimen/_1sdp"
        />

    <ImageView
        android:id="@+id/bt_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/ic_arrow" />

    <TextView
        android:id="@+id/txt_article_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/test_title"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/black"
        android:layout_margin="@dimen/_5sdp"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintBottom_toTopOf="@+id/bt_details"
        app:layout_constraintEnd_toStartOf="@+id/bt_details"
        app:layout_constraintStart_toEndOf="@+id/img_article"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_article_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="@string/test_description"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintBottom_toBottomOf="@+id/img_article"
        app:layout_constraintEnd_toEndOf="@+id/txt_article_title"
        app:layout_constraintStart_toStartOf="@+id/txt_article_title"
        app:layout_constraintTop_toBottomOf="@+id/txt_article_title" />

    <TextView
        android:id="@+id/txt_article_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:text="@string/test_date"
        android:textSize="@dimen/_12ssp"
        android:textStyle="bold"
        android:textColor="@color/grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/txt_article_description"
        app:layout_constraintTop_toBottomOf="@+id/txt_article_description" />


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/grey"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>